// --------------------------------------------------------------------------
// Extension information
// --------------------------------------------------------------------------
//
RESOURCE PHONEBOOK2_EXTENSION_INFORMATION
        r_phonebook2_voicetag_ui_extension_information
    {
    version = 0;

    implementationUid = KPbk2VoiceTagExtensionImplementationUID;

    menuCommandRange = PHONEBOOK2_EXTENSION_RANGE
        {
        firstId = EVoiceTagUiExtensionFirstCommand;
        lastId = EVoiceTagUiExtensionLastCommand;
        };

    overwrittenCommands = 
        {
        // Added here because we want that this extension is loaded when 
        // entered to contact info view, so that we can make menu filtering.
        EPbk2CmdOpenMeViews
        };

    extensionMenus =
        {
        // Contact info view options menu
        PHONEBOOK2_EXTENSION_MENU_RESOURCE
            {
            version = 0;
            viewId = EPbk2ContactInfoViewId;
            menuFilteringFlags = 0;
            parentMenu = R_PHONEBOOK2_CONTACTINFO_EDIT_MENU;
            prevCommand = EPbk2CmdDefaultSettings;
            menuPane = r_pvt_contactinfo_sind_voicetag_menu;
            }
        };
    viewIds = {};
    }

