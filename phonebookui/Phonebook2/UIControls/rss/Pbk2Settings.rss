// --------------------------------------------------------------------------
// The settings list
// --------------------------------------------------------------------------
//
RESOURCE AVKON_SETTING_ITEM_LIST r_phonebook2_settings_list
	{
	title = qtn_phob_set_title;
	initial_number = 1;
    items = 
		{		
        AVKON_SETTING_ITEM
            {
            identifier = EPbk2SettingMemorySelection;
            name = qtn_phob_set_contacts_shown;
            setting_page_resource =
                r_phonebook2_settings_memory_selection_page;
            },
        AVKON_SETTING_ITEM
			{
      		identifier = EPbk2SettingDefaultSavingStorage;
	      	name = qtn_phob_set_default_storage;
	      	setting_page_resource =
                r_phonebook2_settings_default_saving_storage_page;
			associated_resource =
                r_phonebook2_settings_default_saving_storage_setting_texts;
			},
        AVKON_SETTING_ITEM
			{
      		identifier = EPbk2SettingNameOrder;
	      	name = qtn_phob_set_disp_names;
	      	setting_page_resource = r_phonebook2_settings_nameorder_page;
			associated_resource =
                r_phonebook2_settings_nameorder_setting_texts;
			},
      AVKON_SETTING_ITEM
            {
            identifier = EPbk2SettingPredictiveSearch;
            name = qtn_phob_set_prediction;
            setting_page_resource = r_phonebook2_settings_predictive_search_page;
            associated_resource =
                r_phonebook2_settings_predictive_search_setting_texts;
            }
		};
	}

