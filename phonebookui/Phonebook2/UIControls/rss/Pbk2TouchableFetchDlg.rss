RESOURCE DIALOG r_pbk2_multiple_entry_fetch_control_dlg
    {
    flags = PBK2_FETCHDIALOG_FLAGS;
    pages = r_pbk2_multiple_entry_fetch_dlg_pages;
    buttons = r_pbk2_softkeys_empty_back_empty;
