// --------------------------------------------------------------------------
//
RESOURCE NAVI_DECORATOR r_pbk2_single_entry_fetch_navilabel
    {
    type = ENaviDecoratorLabel;
    control = NAVI_LABEL
        {
        txt = qtn_phob_navi_select_one_entry;
        };
    }

