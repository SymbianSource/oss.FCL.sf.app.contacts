    {
    dialog = r_pbk2_single_entry_fetch_control_dlg;
    cba = r_pbk2_softkeys_select_back_select;
    emptyCba = r_pbk2_softkeys_empty_back_empty;
    navi_pane = r_pbk2_single_entry_fetch_navilabel;
    }

