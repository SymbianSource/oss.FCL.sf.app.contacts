//  RESOURCE DEFINITIONS 

/**
 * Prepend number query
 */
RESOURCE DIALOG r_pbk_prepend_query
	{
	flags=	EEikDialogFlagWait | EEikDialogFlagNoDrag | 
			EEikDialogFlagNoTitleBar | EEikDialogFlagCbaButtons | 
			EEikDialogFlagNoShadow;
	buttons=R_AVKON_SOFTKEYS_CALL_CANCEL;
    items=
		{
		DLG_LINE
			{
			type=EAknCtQuery;
			id=EGeneralQuery;
			control=AVKON_DATA_QUERY 
				{ 
				layout = EPhoneLayout;
				label = text_stm_use_number_popup_text;
				control = EDWIN 
					{ 
					flags = EEikEdwinNoHorizScrolling | EEikEdwinResizable
                            | EEikEdwinNoAutoSelection;
	                numeric_keymap=EAknEditorStandardNumberModeKeymap;
	                allowed_input_modes=EAknEditorNumericInputMode;
	                default_input_mode=EAknEditorNumericInputMode;
                    special_character_table = 0;
                    lines = 1;
					};
				};
			}
		};
	}


