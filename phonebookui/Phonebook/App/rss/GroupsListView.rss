/*
 * Groups List View's menu pane.
 */
RESOURCE MENU_PANE r_pbk_groupslist_menu
	{
	items=
		{		
		MENU_ITEM { command = EPbkCmdOpenGroup;			txt = qtn_fldr_open_group; },
		MENU_ITEM { command = EPbkCmdWrite;             txt = qtn_phob_opt_send; },
		MENU_ITEM { command = EPbkCmdCreateNewGroup;	txt = qtn_fldr_new_group; },
		MENU_ITEM { command = EPbkCmdRemoveGroup;		txt = qtn_fldr_delete_group; },
		MENU_ITEM { command = EPbkCmdRenameGroup;		txt = qtn_fldr_rename_group; },
		MENU_ITEM { command = EPbkCmdSetRingingTone;	txt = qtn_phob_opt_group_rtone; },
        	MENU_ITEM { command = EPbkPhonebookInfoSubMenu; txt = qtn_phob_opt_pb_info; 
                cascade = r_pbk_phonebook_info_submenu; },
		MENU_ITEM { command = EPbkCmdSettings;			txt = qtn_phob_opt_settings; }
		};
	}

/**
 * Groups List View's menu bar.
 */
RESOURCE MENU_BAR r_pbk_groupslist_menubar
    {
    titles = 
        {
        // System menu pane
        MENU_TITLE { menu_pane = r_phonebook_system_menu;      },
        // Names List View's menu pane
        MENU_TITLE { menu_pane = r_pbk_groupslist_menu;        },
        MENU_TITLE { menu_pane = r_phonebook_poc_menu;	       }
        };
    }

/**
 * Groups List View's Context sensitive menu pane.
 */
RESOURCE MENU_PANE r_pbk_groupslist_contextmenu
	{
	items=
		{
		MENU_ITEM { command = EPbkCmdCreateNewGroup;	txt = qtn_fldr_new_group; }
		};
	}

/**
 * Groups List View's context sensitive menu bar.
 */
RESOURCE MENU_BAR r_pbk_groupslist_context_menubar
    {
    titles = 
        {
        // Names List View's context menu pane
        MENU_TITLE { menu_pane = r_pbk_groupslist_contextmenu;        }
