        MENU_ITEM { command = EPbkCmdRemoveSpeedDial;   txt = qtn_phob_opt_speed_dial_remove; },
        MENU_ITEM { command = EPbkCmdPersonalRingingTone; txt = qtn_phob_opt_entry_rtone; },

        MENU_ITEM { command = EPbkCmdCodEditText; txt = qtn_phob_opt_object_edit_text; },
        MENU_ITEM { command = EPbkCmdCodViewImage; txt = qtn_phob_opt_object_view_image; },
