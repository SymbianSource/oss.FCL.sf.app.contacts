    {
    titles = 
        {
        MENU_TITLE { menu_pane = r_phonebook_system_menu;        }, // System menu
        MENU_TITLE { menu_pane = r_pbk_contactinfo_options_menu; }, // Contact info view menu
	    MENU_TITLE { menu_pane = r_phonebook_poc_menu;		     },
        MENU_TITLE { menu_pane = r_phonebook_call_menu;          }  // Call menu
        };
    }

RESOURCE MENU_BAR r_pbk_contactinfo_contextbar
    {
    titles = 
        {
        MENU_TITLE { menu_pane = r_pbk_contactinfo_context_menu; }, // System menu
        MENU_TITLE { menu_pane = r_phonebook_poc_context_menu;   }, // Push To Tall menu 
        MENU_TITLE { menu_pane = r_phonebook_call_context_menu;  }  // Call menu
        };
    }

