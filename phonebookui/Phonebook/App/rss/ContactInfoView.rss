    {
    items=
        {
        MENU_ITEM { command = EPbkCmdWrite;         txt = qtn_phob_opt_send;    },
        MENU_ITEM { command = EPbkCmdGoToURL;           txt = qtn_find_go_to_url; },
        MENU_ITEM { command = EPbkCmdEditMe;            txt = qtn_phob_opt_entry_edit; },
        MENU_ITEM { command = EPbkCmdDeleteMe;          txt = qtn_phob_opt_entry_delete; },
