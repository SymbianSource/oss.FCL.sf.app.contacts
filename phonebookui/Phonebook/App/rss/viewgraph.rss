#include <PbkIconInfo.rh>

// ---------------------------------------------------------
// Tab groups
// ---------------------------------------------------------
//

// Main tab group: 
// Names List View and Group List View
RESOURCE TAB_GROUP r_pbk_main_tab_group
    {
    tab_width=EAknTabWidthWithTwoTabs;
    active=0;
    tabs=
        {
        // Names List View
        TAB { 
            id = EPbkNamesListViewId;  
            bmpfile=phonebook_mbm_file_location;
            bmpid=qgn_prop_pb_all_tab2;
            bmpmask=qgn_prop_pb_all_tab2_mask;
            },
        // Group List View
        TAB {
            id = EPbkGroupsListViewId;
            bmpfile=phonebook_mbm_file_location;
            bmpid=qgn_prop_group_tab2;
            bmpmask=qgn_prop_group_tab2_mask;
            }
        };
    }

// Contact tab  group: 
// Contact Info View, Photo View
RESOURCE TAB_GROUP r_pbk_memory_entry_tab_group
    {
    tab_width=EAknTabWidthWithOneTab;
    active=0;
    tabs=
        {
        // Contact Info View
        TAB { 
            id = EPbkContactInfoViewId;
            }
        };
    }

// ---------------------------------------------------------
// View navigation graph
// ---------------------------------------------------------
 
RESOURCE DIG_VIEW_GRAPH r_pbk_viewnodes
    {
    nodes =
        { 
		// Exit view
		DIG_VIEW_NODE
			{
			viewId = EPbkExitViewId;
			defaultPrevViewId = EPbkNullViewId;
			exitNode = 1;
			},
		// Names list view
		DIG_VIEW_NODE
			{
			viewId = EPbkNamesListViewId;
			defaultPrevViewId = EPbkExitViewId;
			transitions =
				{
				DIG_VIEW_TRANSITION 
					{ 
					event=EPbkViewTransitionBack;  targetViewId=EPbkNullViewId;
					},
				DIG_VIEW_TRANSITION 
					{ 
					event=EPbkViewTransitionMenu;  targetViewId=EPbkContactInfoViewId;
					},
				DIG_VIEW_TRANSITION 
					{ 
					event=EPbkViewTransitionRight; targetViewId=EPbkGroupsListViewId;
					},
				DIG_VIEW_TRANSITION 
					{ 
					event=EPbkViewTransitionLeft;  targetViewId=EPbkNullViewId;
					}
				};
			additionalResId = r_pbk_main_tab_group;
			},
		// Group list view
		DIG_VIEW_NODE
			{
			viewId = EPbkGroupsListViewId;
			defaultPrevViewId = EPbkExitViewId;
			transitions =
				{
				DIG_VIEW_TRANSITION 
					{ 
					event=EPbkViewTransitionBack;  targetViewId=EPbkNullViewId;
					},
				DIG_VIEW_TRANSITION 
					{ 
					event=EPbkViewTransitionMenu;  targetViewId=EPbkGroupMembersListViewId;
					},
					DIG_VIEW_TRANSITION 
					{ 
					event=EPbkViewTransitionLeft;  targetViewId=EPbkNamesListViewId; 
					},
				DIG_VIEW_TRANSITION 
					{ 
					event=EPbkViewTransitionRight; targetViewId=EPbkNullViewId;
					}
				};
			additionalResId = r_pbk_main_tab_group;
			},
		// Group members view
        DIG_VIEW_NODE
			{
			viewId = EPbkGroupMembersListViewId;
			defaultPrevViewId = EPbkGroupsListViewId;
			transitions =
				{
				DIG_VIEW_TRANSITION 
					{ 
					event=EPbkViewTransitionBack; targetViewId=EPbkGroupsListViewId; 
					},
				DIG_VIEW_TRANSITION 
					{ 
					event=EPbkViewTransitionMenu; targetViewId=EPbkContactInfoViewId; 
					}
				};
			},
		// Contact info
        DIG_VIEW_NODE
			{
			viewId = EPbkContactInfoViewId;
			defaultPrevViewId = EPbkNamesListViewId;
			transitions =
				{
				DIG_VIEW_TRANSITION 
					{ 
					event=EPbkViewTransitionBack;  targetViewId=EPbkNamesListViewId; 
					},
				DIG_VIEW_TRANSITION 
					{ 
					event=EPbkViewTransitionBack;  targetViewId=EPbkGroupMembersListViewId; 
					},
				DIG_VIEW_TRANSITION 
					{ 
					event=EPbkViewTransitionRight; targetViewId=EPbkNullViewId; 
					},
				DIG_VIEW_TRANSITION 
					{ 
					event=EPbkViewTransitionLeft;  targetViewId=EPbkNullViewId;
					}
				};
			additionalResId = r_pbk_memory_entry_tab_group;
			}
        };
    }

